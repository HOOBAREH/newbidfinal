
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

@*<h2>ChangePassword</h2>*@



<body class="market-US">


    <div class="gloss">
        <div class="wrapper">

            <div id="container">


                <div class="tab-nav">
                    <div id="myaccount">
                        <ul class="panel-content">
                            <li class="myinformation"><a href="">My Information</a></li>
                            <li class="changepassword"><a href="">Change Password</a></li>
                            <li class="myavatar"><a href="">My Avatar</a></li>
                            <li class="notifications"><a href="">Notifications</a></li>
                            <li class="redeemcoupon"><a href="">Redeem Promo</a></li>
                        </ul>
                    </div>
                </div><!--end tabs-->

                <div class="content">

                    <div id="main-content" class="twocol-left">
                        <div class="module">
                            <h3 class="orange bold">Change Password</h3>
                            <div class="content">
                                <p>
                                    Please select a new password. Your password must be at least 8 characters and contain at least 1 numeric character (0-9).
                                </p>
                                <p>
                                </p>
                                <form method="post" action="@Url.Action("ChangePassword", "Account")" onsubmit="return checkChangePassword();">
                                    <fieldset class="spacing">
                                        <label>Old Password:</label>
                                        <br>
                                        <input type="password" name="oldpassword" id="account_oldpassword" class="txt">
                                    </fieldset>
                                    <fieldset class="spacing">
                                        <label>New Password:</label>
                                        <br>
                                        <input type="password" name="password" id="account_password" class="txt" onkeyup="runPassword(this.value, 'mypassword');">
                                    </fieldset>
                                    <fieldset class="spacing">
                                        <label>Confirm Password:</label>
                                        <br>
                                        <input type="password" name="password2" id="account_password2" class="txt">
                                    </fieldset>
                                    <strong><span style="font-size: 10px;color:#969696;">Strength:</span></strong>
                                    <div id="mypassword_text" style="font-size: 10px;"></div>
                                    <div id="mypassword_bar" style="font-size: 1px; height: 5px; width: 0px; border: 1px solid white;"></div>
                                    <input type="submit" class="orange buttons small" value="Update">
                                </form>
                                <p></p>
                                <div class="clear"></div>
                            </div>
                        </div><!--module-->
                    </div>
                    <!--main-content-->
                    <div id="side-content" class="twocol-left">
                        <div class="module">
                            <div class="content">
                                <h4 class="blue-background">
                                    Hi,
                                </h4>

                                <div class="content-left">
                                    <p><img src="~/Content/img/Footer-Bar/52.png" class="img" border='0' /></p>

                                    <p><a href="https://www.quibids.com/en/account/myaccount/avatar.php">(Change)</a></p>
                                </div>

                                <div class="content-right">
                                    <p class="bold">Last Login</p>
                                    <p>@*@Model.LastLogin.Value.ToString("MMM dd, yyyy")*@</p>

                                    <hr>
                                    <p class="bold">Remaining Bids</p>
                                    <p><span>Real Bids <span class="right green">@*@Model.RealBid*@</span> </span></p>
                                    <p><span>Voucher Bids</span> <span class="right green">@*@Model.VoucherBid*@</span></p>
                                    <hr>
                                    <p><span>Total Bids</span> <span class="right green">@*@(Model.RealBid + Model.VoucherBid)*@</span> </p>

                                    <hr>
                                </div>
                            </div>
                        </div>
                        <div class="module">
                            <h3><img class="refer-icon" src="https://dcfv5z6t7wfeu.cloudfront.net//site/images/account/contact-icon.png" /> Contact Support</h3>
                            <div class="content">

                                <p>Got a question? We’ve got answers. For simple solutions, check out our easy-to-access <a href="/en/help/index.php">Help</a> section. For stickier situations, connect to <a href="/en/help/support.php">Live Chat</a> or submit a support request below.</p>
                                <p class="center"><a href="/en/help/support.php" class="buttons medium blue">Contact Support</a></p>
                            </div>
                        </div><!--module-->
                    </div><!--side-content-->
                </div><!--content-->
            </div><!--container-->
        </div><!--wrapper-->
    </div><!--gloss-->

</body>
@section Scripts{
    <script src="~/Scripts/JScript/register.js"></script>

    <script>
        $(document).ready(function () {
            $('.tabs li').each(function (index) {
                var tabClass = $(this).attr('class');
                if (tabClass == "myaccount") {
                    $(this).addClass('ui-state-active');
                }
            });
            $('.panel-content li').each(function (index) {
                var panelHtml = $(this).attr('class');
                if (panelHtml == "myinformation") {
                    $(this).addClass('active');
                }
            });


            if ($('.panel-content').length == 0) {
                $('.tab-nav').css('border', '0px');
            }
            //$.scrollTo('.tab-nav',0);
        });

    </script>
}