
@{
    ViewBag.Title = "register/Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<link href="~/Content/registering.css" rel="stylesheet" !important />
    <link href="~/Content/Style.css" rel="stylesheet" />*@


@section Styles{
    <link href="~/Content/registering.css" rel="stylesheet" />
    <style type="text/css">
        #hidden-div {
            display: none;
        }
       
    </style>
}
<div class="gloss">


    <div class="module">


        <div id="slider_container">
            <div id="featured_carousel">

                <div class="content lockedAuctions lockedAuctions_en">
                    <a target="_blank" href="" class="buttons green large"> بیشتر بدانید! </a>
                </div>
                <div class="content promoFreeShippingForever"></div>
                <div class="content promo promoStore"><a class="widelink" href="/en/quibids101/whats-new-store.php"></a></div>
                <div class="content tips">
                    <div class="title">!چطور یک برد بزرگ داشته باشم</div>
                    <div class="body">
                        See <span>tips</span> and <span>tricks</span> from our staff on best practices for <span>Winning Big</span> on <span>QuiBids!</span>
                    </div>
                    <ul>
                        <li>
                            <a href="">
                                سه اشتباه بزرگ که مبتدی ها مرتکب میشوند
                            </a>
                        </li>
                        <li>
                            <a href="">
                                به دنبال " بزرگترین " بودن
                            </a>
                        </li>
                        <li>
                            <a href="">
                                و خیلی چیز های دیگر
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="content badges">
                    <div class="title">
                        <span class="bold">
                            Cash in with <span class="green">QuiBids Badges!</span>
                        </span>
                    </div>
                    <div class="body">
                        Badges are the best way to earn <span class="bold"><span class="green">FREE BIDS, achieve goals,</span></span> and  <span class="bold"><span class="green">gain experience</span></span> for shopping with QuiBids.
                    </div>
                    <a href="/en/badges/" class="buttons green large"> بیشتر بدانید		</a>
                </div>

            </div>
        </div>



        <div id="container">
            <div class="games">

                <div class="module">
                    <h3 class="bold">
                        <span class="orange">!به نیو بیدز بپیوندید</span>
                    </h3>

                    <div class="form" id="regform" style="
    background:url(/Content/img/form-bg.png) repeat;">
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert">
                                <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                                <strong>!</strong> @ViewBag.Error
                            </div>
                            <br />
                            <br />
                            <br />

                        }
                        <div>


                            <ul class="tab-group">
                                <!-- عنوان صفحه -->
                                @*<button type="submit" class="button button-block">ورود</button>*@
                                <li id="register" class="tab active">
                                    <button type="button" class="button button-block" id="btn-reg">ثبت نام </button>
                                </li>
                                <br />
                                <li id="register" class="tab active">
                                    <button type="button" class="button button-block" id="btn-login">  ورود</button>
                                </li>
                            </ul>

                            <div class="tab-group">
                                @using (Html.BeginForm("Register", "Home", FormMethod.Post,
new { enctype = "multipart/form-data" }))
                                {

                                    <div id="signup">
                                        @*<h1>همین حالا در نیو بیدزعضو شوید</h1>*@
                                        @*<form action="/" method="post">*@
                                        <div class="top-row">
                                            <div class="field-wrap">
                                                <!-- فیلد نام -->
                                                <input type="text" name="Fname" placeholder="نام">
                                            </div>
                                            <div class="field-wrap">
                                                <!--  فیلد نام خانوادگی -->
                                                <input type="text" name="Lname" placeholder="نام خانوادگی" required>
                                            </div>
                                        </div>
                                        <!-- فیلد ایمیل -->
                                        <div class="field-wrap">

                                            <input type="email" name="Email" id="account_email" placeholder="ایمیل شما" required>
                                        </div>
                                        <div class="top-row">

                                            <!--  فیلد رمز عبور -->
                                            <div class="field-wrap">
                                                <!-- فیلد رمزعبور -->
                                                <input type="text" name="PassWord" id="account_password" placeholder="رمز عبور" onkeyup="runPassword(this.value, 'mypassword');" required>
                                            </div>

                                            <div class="field-wrap">
                                                <strong><span style="font-size: 10px;color:#ffffff;">Strength:</span></strong>
                                                <div id="mypassword_text" style="font-size: 10px;color:aliceblue"></div>
                                                <div id="mypassword_bar" style="font-size: 1px; height: 5px; width: 0px; border: 1px solid #ffffff;"> </div>
                                            </div>

                                        </div>
                                        <!-- فیلد تلفن-->
                                        <div class="field-wrap">

                                            <input type="text" name="Mobile" placeholder="تلفن" required>

                                        </div>
                                        <!-- فیلد ادرس-->
                                        <div class="field-wrap">

                                            <textarea type="text" name="Address" placeholder="آدرس"></textarea>
                                        </div>

                                        <!--  کلید ثبت نام -->
                                        <button type="submit" class="button button-block btnreg">ثبت نام</button>
                                        @*</form>*@
                                    </div>
                                }
                                @using (Html.BeginForm("Login", "Home", FormMethod.Post,
new { enctype = "multipart/form-data" }))
                                {
                                    <div id="signIn" hidden>
                                        <!--فیلد ورود-->
                                        <div class="top-row">
                                            <!-- فیلد ایمیل -->
                                            <div class="field-wrap">
                                                <input type="text" name="UserName" placeholder="نام کاربری" required>
                                            </div>

                                            <div class="field-wrap">
                                                <!-- فیلد رمزعبور -->
                                                <input type="password" name="Password" placeholder="رمز عبور" required>

                                            </div>

                                        </div>

                                        <button type="submit" class="button button-block">ورود</button>


                                    </div>
                                }
                            </div><!-- tab-content -->
                        </div>
                    </div> <!-- /form -->
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/Scripts/JScript/register.js"></script>
    <script>


        $('#agree').click(function () {
            if ($('#agree').not(':checked')) {
                outline_reset(null, "agree");
            }
        });
        $("#btn-reg").click(function () {
            $('#signIn').hide();
            $('#signup').show();
            $("#btn-login").show();
            $("#btn-reg").hide();
        });
        $("#btn-login").click(function () {
            $('#signIn').show();
            $('#signup').hide();
            $("#btn-login").hide();
            $("#btn-reg").show();

        });
        if (jQuery.browser.mobile) {
            $('#slider_container').hide();
        } else {
            $('#featured_carousel').orbit({
                animationSpeed: 800,             // how fast animtions are
                timer: true, 			 // true or false to have the timer
                advanceSpeed: 4000, 		 // if timer is enabled, time between transitions
                pauseOnHover: true, 		 // if you hover pauses the slider
                startClockOnMouseOut: true, 	 // if clock should start on MouseOut
                startClockOnMouseOutAfter: 0 	 // how long after MouseOut should the timer start again
            });
        }
    </script>
}